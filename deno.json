{
  "tasks": {
    "serve": "deno run --allow-read --allow-net --allow-env --allow-write --unstable --allow-ffi ./serve.ts"
  },
  "fmt": {
    "files": {
      "include": ["*.ts", "*.json"]
    },
    "options": {
      "indentWidth": 2,
      "singleQuote": false,
      "useTabs": false,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "files": {
      "include": ["*.ts"],
      "exclude": ["node_modules/", "dist/"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "importMap": "./import_map.json"
}
